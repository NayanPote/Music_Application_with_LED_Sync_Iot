<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base transparent layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="36dp" />
            <solid android:color="#40FFFFFF" /> <!-- semi-transparent white -->
        </shape>
    </item>

    <!-- Top shiny highlight -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="36dp" />
            <gradient
                android:angle="90"
                android:startColor="#60FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Bottom soft shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="36dp" />
            <gradient
                android:angle="270"
                android:startColor="#00FFFFFF"
                android:endColor="#20FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Optional border/glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="36dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>

</layer-list>
