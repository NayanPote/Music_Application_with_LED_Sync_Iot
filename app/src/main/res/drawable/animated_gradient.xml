    <item android:duration="1000">
        <shape>
            <gradient
                android:startColor="#FFB002"
                android:centerColor="#FF391F"
                android:endColor="#FF004A"
                android:angle="180" />
        </shape>
    </item>

    <item android:duration="1000">
        <shape>
            <gradient
                android:startColor="#B3FF00"
                android:centerColor="#00FF29"
                android:endColor="#00C9FF"
                android:angle="225" />
        </shape>
    </item>

    <item android:duration="1000">
        <shape>
            <gradient
                android:startColor="#FFD9E4"
