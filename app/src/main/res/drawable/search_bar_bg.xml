<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="28dp" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Subtle shadow / elevation effect -->
    <stroke
        android:width="1dp"
        android:color="#1F2B6D" />

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
