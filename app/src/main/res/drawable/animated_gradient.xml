<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <item android:duration="1000">
        <shape>
            <gradient
                android:startColor="#2E427A"
                android:centerColor="#B85CB8"
                android:endColor="#D15B5B"
                android:angle="45" />
        </shape>
    </item>

    <item android:duration="1000">
        <shape>
            <gradient
                android:startColor="#E0D172"
                android:centerColor="#B84762"
                android:endColor="#A06C4A"
