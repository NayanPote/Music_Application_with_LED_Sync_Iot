<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" /> <!-- For Foreground Service (music playback) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- For notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- For audio playback/recording -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- For Bluetooth device connection & scanning -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- Legacy -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- Legacy -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /> <!-- Android 12+ -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" /> <!-- Android 12+ -->
    <!-- For vibration feedback -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- For internet streaming -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- For reading local media files -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nayora"
        tools:targetApi="31">
        <activity
            android:name="com.nayanpote.Nayora.splash_screen"
            android:exported="false" />
        <activity
            android:name="com.nayanpote.Nayora.developerZone"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.nayanpote.Nayora.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <service
            android:name="com.nayanpote.Nayora.MusicService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>