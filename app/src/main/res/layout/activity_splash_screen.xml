<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nayanpote.Nayora.splash_screen">

    <!-- Animated Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/animated_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Centered Container for Logo & Lottie -->
    <FrameLayout
        android:id="@+id/centerContainer"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lottie Animation as Background -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/music"
            app:lottie_autoPlay="true"
            android:forceDarkAllowed="false"
            app:lottie_loop="true"
            android:visibility="visible"/>

        <!-- Logo with Glow Effect at Center -->
        <FrameLayout
            android:id="@+id/logoHolder"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center">

            <!-- Circular Logo with Elevation -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="#E61E1E1E"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:src="@drawable/logo"
                    android:contentDescription="App Logo"
                    android:scaleType="centerInside" />

            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
